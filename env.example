# ====== DATABASE CONFIGURATION ======
# Scaleway Managed PostgreSQL with pgvector
POSTGRES_HOST=your-scaleway-postgres-endpoint
POSTGRES_PORT=5432
POSTGRES_DB=hackathon_db
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password

# Local development fallback
POSTGRES_HOST_LOCAL=localhost
POSTGRES_DB_LOCAL=hackathon_local
POSTGRES_USER_LOCAL=postgres
POSTGRES_PASSWORD_LOCAL=postgres

# ====== AI MODEL CONFIGURATION ======
# OpenAI API (GPT-4o for Strategist agent)
OPENAI_API_KEY=your-openai-api-key

# Scaleway GenAI API (Mistral for Workforce agent)
SCALEWAY_API_KEY=your-scaleway-api-key
SCALEWAY_PROJECT_ID=your-project-id
SCALEWAY_GENAI_ENDPOINT=https://api.scaleway.com/genai/v1alpha1

# ====== STORAGE CONFIGURATION ======
# Scaleway Object Storage
SCALEWAY_ACCESS_KEY=your-access-key
SCALEWAY_SECRET_KEY=your-secret-key
SCALEWAY_BUCKET_NAME=hackathon-storage
SCALEWAY_REGION=fr-par


# ====== APPLICATION CONFIGURATION ======
# Environment
ENVIRONMENT=development
DEBUG=true

# FastAPI
API_PORT=8000
API_HOST=0.0.0.0

# Frontend
FRONTEND_URL=http://localhost:3000

# ====== SECURITY ======
JWT_SECRET_KEY=your-very-secure-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ====== LANGGRAPH CONFIGURATION ======
LANGGRAPH_CHECKPOINTER=postgres
LANGGRAPH_THREAD_TIMEOUT=3600